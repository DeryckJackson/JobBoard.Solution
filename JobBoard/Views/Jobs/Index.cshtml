@using JobBoard.Models;
<h1>To Do List</h1>
@if (Model.Count == 0)
{
  <p>There are no Jobs.</p>
}
<ul>
  <form action="/jobs/checked" method="post">
    @foreach (Job job in Model)
    {
      <li><input type="checkbox" name="jobIds" value="@job.Id"><a href="jobs/@job.Id">@job.GetTitle()</a></li><br>
      
    }
    <button type="submit">Delete</button>
  </form>
</ul>
<a href="/jobs/new">Add a new item.</a>

<form action="/jobs/delete" method="post">
  <button type="submit" name="button">Clear All Jobs</button>
</form>